<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome To YelpCamp</h1>
        <p>View our hand-picked Campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a></p>
    </header>

    <div class="row">
        <% campgrounds.forEach(function(campground){%>
            <div class=" col-md-4 col-sm-6 text-center ">
                <div class="img-thumbnail">
                    <img style="width: 100%;height: 100%;;"  src="<%=campground.image %>" alt="">
                    <div class="caption"><h4><%=campground.name%></h4></div>
                    <a class="btn btn-primary" href="/campgrounds/<%=campground._id %>">More Info</a>
                </div>
            </div>
        <% });%>
    </div>
    
</div>

<%- include('../partials/footer') %>

